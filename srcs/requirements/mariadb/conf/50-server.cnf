# MariaDB sunucu yapılandırma dosyası
# Bu gruplar MariaDB sunucusu tarafından okunur
# Yalnızca sunucunun görmesi gereken seçenekler için kullanılır

# Bağımsız daemon ve gömülü sunucular tarafından okunur
[server]

# Yalnızca mysqld bağımsız daemon'u için
[mysqld]

#
# * Temel Ayarlar
#
# Sunucunun hangi kullanıcı olarak çalışacağı
user                    = mysql
# PID dosyasının konumu
pid-file                = /run/mysqld/mysqld.pid
# Unix soketi konumu
socket                  = /run/mysqld/mysqld.sock
# Sunucunun dinleyeceği port
port                    = 3306
# MariaDB kurulum dizini
basedir                 = /usr
# Veritabanı dosyalarının saklanacağı dizin
datadir                 = /var/lib/mysql
# Geçici dosyalar için dizin
tmpdir                  = /tmp
# Dil mesajları dizini
lc-messages-dir         = /usr/share/mysql

# Varsayılan olarak sadece localhost'u dinlemek yerine
# tüm IP adreslerinden bağlantı kabul et (Docker ağı için gerekli)
bind-address            = 0.0.0.0

#
# * Performans Ayarları
#
# Sorgu önbelleği boyutu
query_cache_size        = 16M

#
# * Günlük Kaydı ve Hata Ayıklama
#
# Hata günlüğü dosyası
log_error = /var/log/mysql/error.log
# Günlük dosyalarını kaç gün saklayacağı
expire_logs_days        = 10

#
# * Karakter Seti Ayarları
#
# UTF-8 karakter seti kullanımı (emoji desteği dahil)
character-set-server  = utf8mb4
# Varsayılan karşılaştırma ayarı
collation-server      = utf8mb4_general_ci

# MariaDB 10.3 sürümüne özel ayarlar için
[mariadb-10.3]
